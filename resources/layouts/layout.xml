<layout id="MainLayout" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://developer.garmin.com/downloads/connect-iq/resources.xsd">  
    <label
        id="timeHM"
        x="56%"
        y="9%"
        text="--:--"
        font="Graphics.FONT_MEDIUM"
        color="Graphics.COLOR_BLUE"
        justification="Graphics.TEXT_JUSTIFY_RIGHT"
    />

    <label
        id="timeSec"
        x="56%"
        y="12%"
        text=":--"
        font="Graphics.FONT_TINY"
        color="Graphics.COLOR_BLUE"
        justification="Graphics.TEXT_JUSTIFY_LEFT"
    />

    <label
        id="countFromToLabel"
        x="center"
        y="23%"
        text="__:__ -> __:__"
        font="Graphics.FONT_TINY"
        color="Graphics.COLOR_BLUE"
        justification="Graphics.TEXT_JUSTIFY_CENTER"
    />

    <label
        id="currentTimerLabel"
        x="center" 
        y="center"
        text="00:00"
        font="Graphics.FONT_NUMBER_THAI_HOT"
        color="Graphics.COLOR_YELLOW"
        justification="Graphics.TEXT_JUSTIFY_CENTER"
    />

    <label
        id="currentDirectionDescription"
        x="center" 
        y="68%"
        text="Paused"
        font="Graphics.FONT_SMALL"
        color="Graphics.COLOR_GREEN"
        justification="Graphics.TEXT_JUSTIFY_CENTER"
    />
